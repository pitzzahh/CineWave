<Application x:Class="CineWave.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CineWave" 
             xmlns:viewModel="clr-namespace:CineWave.MVVM.ViewModel"
             xmlns:view="clr-namespace:CineWave.MVVM.View">
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
            <view:LoginWindow/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
             <view:HomeView/>
         </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModel:ReservationsViewModel}">
            <view:ReservationsView/>
        </DataTemplate>
        
        <ResourceDictionary x:Key="Colours" Source="Syles/Colors.xaml"/>

    </Application.Resources>
    
</Application>
